@model IEnumerable<CarDealer.Core.Models.OutputModels.CarPreviewModel>

@{
    ViewData["Title"] = "View";
}

<h1>All cars for sale</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-primary">Add new car</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-lg">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn-outline-light">Details</a> | 
                <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-light">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
